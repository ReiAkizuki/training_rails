<ul>
  <% @blog.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= form_with model: blog, local: true do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field 'title' %>
  </div>
  <div class="field">
    <%= f.label :text %>
    <%= f.text_field 'text' %>
  </div>
  <%= f.submit %><br>
<% end %>
